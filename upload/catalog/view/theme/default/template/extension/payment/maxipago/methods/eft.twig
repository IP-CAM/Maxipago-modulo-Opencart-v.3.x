<div class="panel panel-default">
    <div class="panel-heading">
        <input type="radio" name="payment_method" data-panel="eft"/>
        <img src="{{ image_title_eft }}" />
        {{ text_title_eft }}
    </div>
    <div id="panel-eft" class="panel-body payment-panel" style="display: none;">

        <div class="row">
            <div class="col-md-12">
                <div>
                    <label>{{ eft_bank_label }}</label>
                </div>
                <div class="form-group">
                    <div class="form-control" style="height: fit-content; overflow: auto;">
                        {% for key, value in eft_banks %}
                            <div class="pull-left">
                                <label class="mp-card-bank">
                                    <input type="radio" name="eft_bank" class="maxipago-bank" value="{{ key }}" />
                                    <img src="{{ image_banks_base_url }}{{ key }}.png" height="50" width="50"/>
                                </label>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>{{ eft_document_label }}</label>
                    <input id="eft_document" name="eft_document"
                           type="text" class="form-control cpfcnpj" placeholder="***.***.***-**"/>
                </div>
            </div>
        </div>

        <hr />
        <div class="buttons">
            <div class="pull-right">
                <input type="button" value="{{ eft_submit_checkout }}"
                       id="button-confirm-eft" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>